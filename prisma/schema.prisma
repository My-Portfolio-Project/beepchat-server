generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  fullName String
  email    String @unique
  password String

  // Relations
  messages              Message[]
  sentConversations     Conversation[] @relation("SenderConversations")
  receivedConversations Conversation[] @relation("ReceiverConversations")

  story Story[]
  group Group[]   @relation("GroupMembers")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Conversation {
  id         String @id @default(cuid())
  senderId   String
  receiverId String

  // Relations
  sender   User      @relation("SenderConversations", fields: [senderId], references: [id])
  receiver User      @relation("ReceiverConversations", fields: [receiverId], references: [id])
  messages Message[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([senderId])
  @@index([receiverId])
}

model Message {
  id      String  @id @default(cuid())
  message String
  image   String?

  userId         String
  conversationId String

  // Relations
  user         User         @relation(fields: [userId], references: [id])
  conversation Conversation @relation(fields: [conversationId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  groups    Group[]  @relation("GroupMessages")

  @@index([userId])
  @@index([conversationId])
}

enum MediaType {
  FILE 
  TEXT
}

model Story {
  id   String  @id @unique @default(cuid())
  media   MediaType   @default(TEXT)

  userId String

  user User @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())


  @@index([userId])
}

model Group {
  id        String   @id @default(cuid())
  name      String
  users     User[]    @relation("GroupMembers")
  messages  Message[] @relation("GroupMessages")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}



